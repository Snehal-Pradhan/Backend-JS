<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function previewImage() {
            const url = document.getElementById('imageUrl').value;
            const preview = document.getElementById('imagePreview');
            preview.style.backgroundImage = url ? `url('${url}')` : 'none';
            preview.classList.toggle('border-dashed', !url);
        }
    </script>
</head>

<body class="bg-gray-100 min-h-screen">
    <a href="/"
        class="fixed top-4 left-4 bg-white shadow-sm px-4 py-2 rounded-lg flex items-center gap-2 hover:bg-gray-50 transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
                d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                clip-rule="evenodd" />
        </svg>
        Back Home
    </a>

    <div class="container mx-auto p-4 max-w-4xl mt-12">
        <div class="bg-white rounded-xl shadow-md overflow-hidden flex flex-col md:flex-row">
            <!-- Form Section -->
            <div class="p-8 flex-1">
                <h1 class="text-2xl font-bold text-gray-800 mb-6">Create New User</h1>

                <form action="/users" method="POST" class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Username*</label>
                        <input type="text" name="username" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Profile Image URL</label>
                        <input type="url" id="imageUrl" name="imageUrl" oninput="previewImage()"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            placeholder="https://example.com/photo.jpg">
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Email*</label>
                        <input type="email" name="email" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>

                    <button type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 px-4 rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Create User
                    </button>
                </form>
            </div>

            <!-- Preview Section -->
            <div
                class="bg-gray-50 p-8 border-l border-gray-200 flex flex-col items-center justify-center w-full md:w-80">
                <div id="imagePreview"
                    class="w-40 h-40 rounded-full bg-gray-200 border-2 border-dashed border-gray-300 bg-cover bg-center mb-4">
                </div>
                <div class="text-center">
                    <p class="text-sm text-gray-500">Image Preview</p>
                    <p id="previewText" class="text-xs text-gray-400 mt-1">Will appear when URL is entered</p>
                </div>
            </div>
        </div>
    </div>
</body>

</html>